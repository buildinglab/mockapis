import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="API Keys">
  <section class="max-w-3xl mx-auto space-y-6">
    <div class="prose">
      <h1>API Keys</h1>
      <p>Use these demo keys while exploring the API. In production, keys would be issued per account.</p>
    </div>

    <div class="overflow-x-auto">
      <table class="table">
        <thead>
          <tr>
            <th>Key</th>
            <th>Status</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><code>demo123</code></td>
            <td><span class="badge badge-success">active</span></td>
            <td>Full access for demo purposes</td>
          </tr>
          <tr>
            <td><code>readonly</code></td>
            <td><span class="badge">readonly</span></td>
            <td>Read-only access</td>
          </tr>
          <tr>
            <td><code>expired</code></td>
            <td><span class="badge badge-error">expired</span></td>
            <td>Will be rejected by the API</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="alert">
      <span>Send the key via query param <code>apikey</code>.</span>
    </div>
  </section>
</BaseLayout>
