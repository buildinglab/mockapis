import BaseLayout from "../layouts/BaseLayout.astro";
const base = import.meta.env.BASE_URL || "/";
---
<BaseLayout title="Mock API Portal">
  <section class="max-w-4xl mx-auto space-y-8">
    <div class="prose">
      <h1>Mock API Portal</h1>
      <p class="text-base-content/80">
        A clean, minimal place to explore our mock APIs. Use the demo API keys,
        read the endpoint docs, and try requests in your browser.
      </p>
    </div>

    <div class="grid gap-4 sm:grid-cols-2">
  <a href={(base.endsWith('/') ? `${base}docs/nginx/` : `${base}/docs/nginx/`)} class="card bg-base-100 shadow hover:shadow-md transition">
        <div class="card-body">
          <h2 class="card-title">Nginx Logs API</h2>
          <p>Paginated access to generated Nginx access logs.</p>
          <div class="text-sm opacity-70">GET /api/nginx/v1/logs</div>
        </div>
      </a>

      <a href={(base.endsWith('/') ? `${base}keys/` : `${base}/keys/`)} class="card bg-base-100 shadow hover:shadow-md transition">
        <div class="card-body">
          <h2 class="card-title">API Keys</h2>
          <p>Built-in demo keys and their states.</p>
          <div class="text-sm opacity-70">demo123 • readonly • expired</div>
        </div>
      </a>
    </div>

    <div class="alert alert-info">
      <span>
        Tip: For quick testing, open the Nginx Logs API and use the Try it panel with the key <code>demo123</code>.
      </span>
    </div>
  </section>
</BaseLayout>
