import DocsLayout from "../../layouts/DocsLayout.astro";
const base = import.meta.env.BASE_URL || "/";
---
<DocsLayout title="API Reference">
  <section class="max-w-3xl mx-auto space-y-8">
    <div class="prose">
      <h1>API Reference</h1>
      <p class="text-base-content/80">
        Clean and minimal docs to help you explore the available endpoints.
      </p>
    </div>

    <div class="divide-y rounded-lg border bg-base-100">
  <a class="block p-4 hover:bg-base-200 transition" href={(base.endsWith('/') ? `${base}docs/nginx/` : `${base}/docs/nginx/`)}>
        <div class="flex items-center justify-between">
          <div>
            <div class="font-medium">Nginx Logs API</div>
            <div class="text-sm opacity-70">GET /api/nginx/v1/logs</div>
          </div>
          <span class="badge">v1</span>
        </div>
      </a>
    </div>

    <div class="alert alert-info">
      <span>Use the demo key <code>demo123</code> to try the endpoints.</span>
    </div>
  </section>
</DocsLayout>
