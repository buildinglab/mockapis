interface Props { title?: string }
const { title = 'Mock API Portal' } = Astro.props as Props;
import '../styles/tailwind.css';
const base = import.meta.env.BASE_URL || '/';
---
<html lang="en" data-theme="dim">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark" />
    <title>{title}</title>
    
  </head>
  <body class="min-h-screen bg-base-200 text-base-content">
    <header class="border-b bg-base-100">
      <div class="max-w-7xl mx-auto px-4 py-3 flex items-center gap-6">
        <a class="text-xl font-semibold" href={(base.endsWith('/') ? `${base}` : `${base}/`)}>Mock API</a>
        <nav class="flex items-center gap-4 text-sm">
          <a class="hover:underline" href={(base.endsWith('/') ? `${base}docs/` : `${base}/docs/`)}>Docs Home</a>
          <a class="hover:underline" href={(base.endsWith('/') ? `${base}docs/nginx/` : `${base}/docs/nginx/`)}>Nginx</a>
          <a class="hover:underline" href={(base.endsWith('/') ? `${base}keys/` : `${base}/keys/`)}>API Keys</a>
        </nav>
      </div>
    </header>
    <main class="max-w-7xl mx-auto px-4 py-6">
      <slot />
    </main>
    <footer class="footer footer-center p-4 bg-base-100 text-base-content">
      <aside>
        <p>Mock API Portal</p>
      </aside>
    </footer>
  </body>
</html>
